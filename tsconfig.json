{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext", "dom"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
